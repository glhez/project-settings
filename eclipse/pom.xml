  <artifactId>eclipse</artifactId>
  <packaging>jar</packaging>

  <description>
    Package various Eclipse configuration.
    There are one project per JDK version.
  </description>

  <build>
    <resources>
      <resource>
        <filtering>false</filtering>
        <directory>${project.basedir}/java8</directory>
      </resource>
      <resource>
        <filtering>false</filtering>
        <directory>${project.basedir}/java11</directory>
      </resource>
    </resources>
  </build>
</project>
