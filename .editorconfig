root=true

[*.{bash,java,cpp,py,xml}]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.patch]
trim_trailing_whitespace = false

[*.{bash,sh}]
end_of_line = lf

[.mvn/*]
end_of_line = lf

[mvnw]
end_of_line = lf

[mvnw.cmd]
end_of_line = crlf

